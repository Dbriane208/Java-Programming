<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".components.LecturerDashboardActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Students Dashboard"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:textSize="48sp"
        android:layout_marginBottom="24dp"
        />

    <TextView
        android:id="@+id/availableLecturers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:text="Available Lecturers"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/postWork"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Post Your Work"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineMrgBottom" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentsRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/availableLecturers" />

</LinearLayout>